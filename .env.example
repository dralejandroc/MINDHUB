# MindHub MVP - Environment Configuration

# ==============================================
# DATABASE CONFIGURATION (XAMPP MySQL)
# ==============================================
DATABASE_URL="mysql://root:@localhost:3306/mindhub_mvp"

DB_HOST=localhost
DB_PORT=3306
DB_NAME=mindhub_mvp
DB_USER=root
DB_PASS=

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# AUTH0 CONFIGURATION (Optional for MVP)
# ==============================================
AUTH0_SECRET=your-auth0-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,mp4,mp3,wav,jpg,jpeg,png,avi,mov

# ==============================================
# XAMPP PATHS (Choose based on your OS)
# ==============================================
# macOS
XAMPP_ROOT=/Applications/XAMPP

# Windows
# XAMPP_ROOT=C:\xampp

# Linux
# XAMPP_ROOT=/opt/lampp

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@mindhub.local

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_DIR=./backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
MAX_CONCURRENT_UPLOADS=5
SESSION_TIMEOUT=30m
CACHE_TTL=3600

# ==============================================
# HEALTHCARE COMPLIANCE
# ==============================================
ENABLE_AUDIT_LOG=true
AUDIT_LOG_DIR=./logs/audit
HIPAA_COMPLIANCE=true
DATA_RETENTION_YEARS=7