# MindHub Development Environment Configuration

# Database Configuration (Local MAMP)
DATABASE_URL="mysql://root:root@localhost:8889/mindhub"
DB_HOST="localhost"
DB_PORT="8889"
DB_USER="root"
DB_PASSWORD="root"
DB_NAME="mindhub"

# Application Configuration
NODE_ENV="development"
PORT="3002"

# Authentication
JWT_SECRET="mindhub-dev-secret-2025-please-change-in-production"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# Beta Configuration
BETA_MODE="true"
ENABLE_PAYMENTS="false"
ENABLE_AUTH0="false"

# Security (relaxed for development)
BCRYPT_ROUNDS="10"
RATE_LIMIT_MAX="1000"
RATE_LIMIT_WINDOW="900000"

# Logging
LOG_LEVEL="debug"
LOG_FILE="./logs/development.log"

# Next.js Frontend URLs
NEXT_PUBLIC_API_URL="http://localhost:3002"
NEXT_PUBLIC_BETA_MODE="true"
NEXT_PUBLIC_ENABLE_AUTH0="false"
NEXT_PUBLIC_ENABLE_PAYMENTS="false"

# Health Check
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/health"

# Development Tools
ENABLE_SWAGGER="true"
ENABLE_DEBUG_LOGS="true"