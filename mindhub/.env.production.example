# MindHub Production Environment Configuration

# Database Configuration (Railway MySQL)
DATABASE_URL="mysql://username:password@host:port/database"
DB_HOST="your-railway-mysql-host"
DB_PORT="3306"
DB_USER="root"
DB_PASSWORD="your-secure-password"
DB_NAME="railway"

# Application Configuration
NODE_ENV="production"
PORT="3002"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="https://app.mindhub.cloud"
ALLOWED_ORIGINS="https://mindhub.cloud,https://app.mindhub.cloud,https://api.mindhub.cloud"

# Beta Configuration
BETA_MODE="true"
ENABLE_PAYMENTS="false"
ENABLE_AUTH0="false"

# Security
BCRYPT_ROUNDS="12"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/production.log"

# Next.js Frontend URLs
NEXT_PUBLIC_API_URL="https://api.mindhub.cloud"
NEXT_PUBLIC_BETA_MODE="true"
NEXT_PUBLIC_ENABLE_AUTH0="false"
NEXT_PUBLIC_ENABLE_PAYMENTS="false"

# Health Check
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/health"

# Monitoring
ENABLE_METRICS="true"
METRICS_PORT="9090"